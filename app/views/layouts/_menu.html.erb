<header class="header_wrap fixed-top">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand page-scroll animation" href="#" data-animation="fadeInLeft" data-animation-delay="0.8s">
        <img class="logo_dark" height="50px" src="../ico_assets/images/logo.png" alt="logo" />
      </a>
      <button class="navbar-toggler animation" data-animation="fadeInRight" data-animation-delay="1.2s" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="ion-android-menu"></span> </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav animation" data-animation="fadeInDown" data-animation-delay="1.2s">
          <li><%= link_to "About", root_path+"#about", class: "nav-link page-scroll" %></li>
          <li><%= link_to "Token", root_path+"#token", class: "nav-link page-scroll" %></li>
          <li><%= link_to "Road", root_path+"#road_map", class: "nav-link page-scroll" %></li>
          <li><%= link_to "FAQ", root_path+"#faq", class: "nav-link page-scroll" %></li>
          <li><%= link_to "Contact", root_path+"#contact", class: "nav-link page-scroll" %></li>
          <li><%= link_to "Projects", projects_path, class: 'nav-link'%></li>
          <li><%= link_to "Articles", articles_path, class: 'nav-link'%></li>
          <li><%= link_to "Courses", courses_path, class: 'nav-link' %></li>
          <li><a class="nav-link" href="https://download.berycoin.com">Downloads</a></li>
        </ul>
        
        <ul class="navbar-nav nav_btn animation" data-animation="fadeInRight" data-animation-delay="1.6s">
          <% if user_signed_in? %>
            <li>
              <%= link_to "My Account", dashboard_path, class: 'nav-link btn btn-default' %>
            </li>
          <% else %>
            <li>
              <%= link_to "Login", new_user_session_path, class: 'nav-link btn btn-default' %>
            </li>
            <li>
              <%= link_to "Register", new_user_registration_path, class: 'nav-link btn btn-default' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= render 'layouts/messages' %>
  </div>
</header>