<div class="content">
  <div class="row">
    <div class="col-lg-3 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="statistics statistics-horizontal">
            <div class="info info-horizontal">
              <div class="row">
                <div class="col-5">
                  <div class="icon icon-primary icon-circle">
                    <i class="fab fa-nutritionix"></i>
                  </div>
                </div>
                <div class="col-7 text-right">
                  <h3 class="info-title">Income</h3>
                  <h6 class="stats-title"><%= "50" %> BERY </h6>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="card-footer ">
          <div class="stats">
            <i class="fab fa-nutritionix"></i> Total Earnings
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="statistics statistics-horizontal">
            <div class="info info-horizontal">
              <div class="row">
                <div class="col-5">
                  <div class="icon icon-warning icon-circle">
                    <i class="fa fa-heart"></i>
                  </div>
                </div>
                <div class="col-7 text-right">
                  <h3 class="info-title">100</h3>
                  <h6 class="stats-title">Reactions</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="card-footer ">
          <div class="stats">
            <i class="fa fa-check"></i> Total reactions
            <span class="text-success"> <b class="text-primary">100</b> </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="statistics statistics-horizontal">
            <div class="info info-horizontal">
              <div class="row">
                <div class="col-5">
                  <div class="icon icon-danger icon-circle">
                    <i class="fa fa-comments"></i>
                  </div>
                </div>
                <div class="col-7 text-right">
                  <h3 class="info-title"><%= @comments.count %></h3>
                  <h6 class="stats-title">Comments</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="card-footer ">
          <div class="stats">
            <i class="now-ui-icons ui-2_chat-round"></i> Total Comments
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="statistics statistics-horizontal">
            <div class="info info-horizontal">
              <div class="row">
                <div class="col-5">
                  <div class="icon icon-info icon-circle">
                    <i class="now-ui-icons objects_support-17"></i>
                  </div>
                </div>
                <div class="col-7 text-right">
                  <span class="btn btn-default"><%= @article.statuses.first.name.capitalize %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="card-footer ">
          <div class="stats">
            <i class="now-ui-icons arrows-1_refresh-69"></i> Article Status
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card ">
          <div class="card-header ">
            <h4 class="card-title"> <%= @article.users.first.name %> posted in <b class="text-primary"> <%= @article.categories.first.name.capitalize %> </b>
              <small class="description"><%= @article.title %></small>
            </h4>
          </div>
          <div class="card-body ">
            <div class="row">
              <div class="col-lg-12 col-md-12">
<%= image_tag @article.article_cover.url(:large) %>
<%= image_tag @article.article_cover.url(:medium) %>
<%= image_tag @article.article_cover.url(:thumb) %>
                <h5 class="card-category"><%= @article.title %></h5>
                <p>
                  <%= @article.content.html_safe %>
                </p>
                <p>
                  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-info" %>
                  <%= link_to 'Back', articles_path, class: "btn btn-default"%>
                </p>
              </div>
            </div>
          </div>
        </div>
        <%= form_for @comment, url: article_comments_path(@article.id) do |f| %>
          <div class="card card-plain">
            <div class="card-header">
              <h5 class="card-category">Comment Here</h5>
            </div>
            <div class="card-body">
              <div class="form-group">
                <%= f.text_area :content, class: 'form-control', placeholder: 'Type comment here' %>
              </div>
              <div class="actions">
                <%= f.submit class: 'btn btn-info' %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="card">
          <div class="card-header ">
            <h4 class="card-title">Comments
              <small class="description">See what people say about this project</small>
            </h4>
          </div>
          <div class="card-body">
            <% @comments.each do |c| %>
              <div class="card card-plain">
                <div class="card-header">
                  <div class="card-title">
                    <img src="../my_assets/img/default-avatar.png" style="border-radius: 50%;height: 50px; width: 50px" alt="">
                    <span class="badge badge-danger"><%= c.users.first.name %> says</span>
                  </div>
                  <div class="card-body">
                    <p><i class="fa fa-comments"></i> <%= c.content %>
                    </p>
                  </div>
                  <div class="card-footer">
                    <h6>
                      <i class="ti-time"></i><%= time_ago_in_words c.created_at %> ago
                    </h6>
                  </div>
                </div>
              </div>
              <hr/>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

<% content_for :head do %>
  <%= @article.title %>
<% end %>
<% content_for :short do %>
  <%= " Lets Succeed Together Lets Succeed Together Lets Succeed Together Lets Succeed Together Lets Succeed Together  " %>
<% end %>
<% content_for :lins do %>
  <a href=""> Reward: <b>50</b> </a>
  |
  <a href=""> <i class="fa fa-comments"></i> <%= @comments.count %> </a>
  |
  <a href="http://localhost:3000/users/<%= @article.users.first.id %>"> by <%= @article.users.first.name %> </a>
<% end%>