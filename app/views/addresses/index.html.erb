<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Addresses</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                              <th>Street</th>
                              <th>Country</th>
                              <th>City</th>
                              <th>Zip</th>
                              <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                                <td><%= address.street %></td>
                                <td><%= address.country %></td>
                                <td><%= address.city %></td>
                                <td><%= address.zip %></td>
                                <td>
                    <%= link_to address, class: "btn btn-info btn-icon btn-sm " do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    </td>
                    <td>
                    <%= link_to edit_address_path(address), class: "btn btn-success btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-2_settings-90"></i>
                    <% end %>
                    </td>
                    <td>
                    <%= link_to address, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-1_simple-remove"></i>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <br>

          <%= link_to 'New Address', new_address_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>