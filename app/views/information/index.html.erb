<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Information</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Title</th>
                          <th>Content</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @information.each do |information| %>
                <tr>
                            <td><%= information.title %></td>
                            <td><%= information.content %></td>
                            <td><%= link_to 'Show', information %></td>
                  <td><%= link_to 'Edit', edit_information_path(information) %></td>
                  <td><%= link_to 'Destroy', information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Information', new_information_path %>
        </div>
      </div>
    </div>
  </div>
</div>