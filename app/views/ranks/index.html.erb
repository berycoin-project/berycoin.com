<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Ranks</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Name</th>
                          <th>Value</th>
                          <th>Article Reward</th>
                          <th>Project Reward</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @ranks.each do |rank| %>
                <tr>
                            <td><%= rank.name %></td>
                            <td><%= rank.value %></td>
                            <td><%= rank.article_reward %></td>
                            <td><%= rank.project_reward %></td>
                            
                            <td><%= link_to 'Show', rank %></td>
                  <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
                  <td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Rank', new_rank_path %>
        </div>
      </div>
    </div>
  </div>
</div>