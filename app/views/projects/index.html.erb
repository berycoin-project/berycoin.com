<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Projects</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Status</th>
                  <th>Title</th>
                  <th>Budget</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @projects.each do |project| %>
                  <tr>
                    <td><button class="btn btn-default"><%= project.statuses.first.name.capitalize %></button></td>
                    <td><%= project.title %></td>
                    <td><%= project.budget %></td>
                    <td class="text-right">
                    <%= link_to project, class: "btn btn-info btn-icon btn-sm " do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <%= link_to edit_project_path(project), class: "btn btn-success btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-2_settings-90"></i>
                    <% end %>
                    <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-1_simple-remove"></i>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <br>

          <%= link_to 'New Project', new_project_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>