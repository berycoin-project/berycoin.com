<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Projects</h2>
        </div>
        <div class="card-body">
          <table>
            <thead>
            <tr>
              <th>Title</th>
              <th>budget</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= project.budget %></td>
                <td><%= project.statuses.first unless project.statuses.first != nil %></td>
                <td>
                  <%= link_to project, class: "btn btn-info btn-icon btn-sm " do%>
                    <i class="fa fa-eye"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_project_path(project), class: "btn btn-success btn-icon btn-sm " do%>
                    <i class="now-ui-icons ui-2_settings-90"></i>
                  <% end %>
                </td>
                <td><%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon btn-sm " do%>
                    <i class="now-ui-icons ui-1_simple-remove"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Project', new_project_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>