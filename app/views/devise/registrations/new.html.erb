<div class="col-md-4 mr-auto">
  <div class="card card-signup text-center">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
      <div class="card-header ">
        <div class="social">
          <h4 class="card-description"><i class="fa fa-user"></i> Join Now! </h4>
        </div>
      </div>
      <div class="card-body ">
        <div class="input-group">
                      <span class="input-group-addon">
                       <i class="fa fa-user-circle"></i>
                      </span>

          <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'Your Name' %>
        </div>
        <div class="input-group">
                        <span class="input-group-addon">
                          <i class="now-ui-icons ui-1_email-85"></i>
                        </span>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Your Email' %>
        </div>
        <div class="input-group no-border form-control-lg">
                 <span class="input-group-addon">
                  <i class="fa fa-key"></i>
                 </span>

          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="input-group no-border form-control-lg">
                       <span class="input-group-addon">
                        <i class="fa fa-key"></i>
                       </span>

          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
        </div>
          <div class="form-check text-left">
            <label class="form-check-label">
              You agree to our
              <a href="#something"> terms </a> when you Register.
            </label>
          </div>
      </div>
      <div class="card-footer ">
        <%= f.submit 'Get Started', :class => 'btn btn-primary btn-round btn-lg' %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :title do %>
<%= "User Registeration" %>
<% end %>