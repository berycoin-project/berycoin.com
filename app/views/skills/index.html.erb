<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Skills</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Title</th>
                          <th>Level</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @skills.each do |skill| %>
                <tr>
                            <td><%= skill.title %></td>
                            <td><%= skill.level %></td>
                  <td>
                    <%= link_to skill, class: "btn btn-info btn-icon btn-sm " do%>
                      <i class="fa fa-eye"></i>
                    <% end %>
                      </td>
                  <td>
                    <%= link_to edit_skill_path(skill), class: "btn btn-success btn-icon btn-sm " do%>
                      <i class="now-ui-icons ui-2_settings-90"></i>
                    <% end %>
                      </td>
                  <td><%= link_to skill, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon btn-sm " do%>
                      <i class="now-ui-icons ui-1_simple-remove"></i>
                    <% end %>
                      </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Skill', new_skill_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>