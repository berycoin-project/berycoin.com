<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Statuses</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                              <th>Name</th>
                              <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @statuses.each do |status| %>
                  <tr>
                    <td><%= status.name %></td>
                    <td class="text-right">
                    <%= link_to status, class: "btn btn-info btn-icon btn-sm " do %>
                      <i class="fa fa-eye"></i>
                    <% end %>

                    <%= link_to edit_status_path(status), class: "btn btn-success btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-2_settings-90"></i>
                    <% end %>

                    <%= link_to status, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-icon btn-sm " do %>
                      <i class="now-ui-icons ui-1_simple-remove"></i>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <br>

          <%= link_to 'New Status', new_status_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>